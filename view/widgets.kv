#:import Clock kivy.clock.Clock

<DropdownMenuContainer>
    size_hint_y: None
    height: self.minimum_size[1]
    cols: 1
    padding: [2, 2, 3, 3]

<DropdownTextField>
    menu: None
    mode: 'round'
    open_close_icons: ['menu-down', 'menu-up']
    icon_right: self.open_close_icons[0]
    icon_right_color_normal: app.theme_cls.text_color
    icon_right_color_focus: app.theme_cls.text_color
    icon_left: 'none'

<DropdownSelectable>
    text: ''
    font_style: 'Body2'
    divider: None
    md_bg_color: app.theme_cls.bg_light

<DropDownMenu>
    auto_dismiss: False
    min_state_time: 0.01
    radius: [5, 5, 5, 5]
    elevation: 2
